<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundMainColor"
    tools:context=".GameWindow">

    <LinearLayout
        android:id="@+id/TopInfoMenu"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/GameBarColor"
        android:orientation="horizontal">

        <Button
            android:id="@+id/reloadButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="3dp"
            android:drawableBottom="@drawable/ic_baseline_autorenew_36"
            app:cornerRadius="18dp" />

        <TextView
            android:id="@+id/bestSoreText"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginTop="19sp"
            android:layout_weight="1"
            android:fontFamily="@font/rubik"
            android:text="@string/BestScore"
            android:textAlignment="center"
            android:textColor="@color/highliteTextColor"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="120sp"
            android:layout_height="match_parent"
            android:layout_marginTop="19sp"
            android:layout_weight="1"
            android:fontFamily="@font/rubik"
            android:text="@string/startScore"
            android:textAlignment="center"
            android:textColor="@color/highliteTextColor"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linBoardGame"
        android:layout_width="wrap_content"
        android:layout_height="482dp"
        android:layout_below="@+id/TopInfoMenu"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="3dp"
        android:background="@color/backgroundMainColor"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/turn"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_below="@+id/linBoardGame"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/rubik"
        android:text="@string/uTurn"
        android:textAlignment="center"
        android:textSize="30sp" />

