<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundMainColorLight"
    tools:context=".SettingsWindow">

    <TextView
        android:id="@+id/gameNameLogo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="145sp"
        android:fontFamily="@font/rubik"
        android:text="@string/Settings"
        android:textAlignment="center"
        android:textColor="@color/RENJUcolorLight"
        android:textSize="45sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameNameLogo2"
        android:layout_marginTop="53dp"
        android:fontFamily="@font/rubik"
        android:text="@string/fieldSize"
        android:textAlignment="center"
        android:textSize="20sp" />
</RelativeLayout>