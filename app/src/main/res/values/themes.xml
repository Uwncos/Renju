<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Renju" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="backgroundColor">@color/backgroundMainColorLight</item>
        <item name="colorPrimary">@color/buttonColorLight</item>
        <item name="android:textColor">@color/inGameTextLight</item>
        <item name="colorAccent">@color/RENJUcolorLight</item>
        <item name="color">@color/GameBarColor</item>
        <!-- Secondary brand color. -->
        <item name="android:windowLayoutInDisplayCutoutMode">
            shortEdges
            <!-- default, shortEdges, or never -->
        </item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>